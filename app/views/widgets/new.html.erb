<%= content_for(:head) do %>
  <%= javascript_include_tag "chosen.jquery.min" %>
  <%= stylesheet_link_tag "chosen.css" %>
  <script type="text/javascript">
    $(function(){
      $(".chzn-select").chosen()
    })
  </script>
<% end %>
<div id="page" class="row">
  <div id="widget" class="span6 offset3">
    <div class="info-container">
      <h3>Get a widget for your Politican below:</h3>
    </div>
    <%= form_for @widget do |f| %>
      <p>
        <%= f.select :politician_id, Politician.in_office, {:include_blank => ""}, { :class=>'chzn-select' } %>
      </p>
      <div>
        <%= f.submit "Create", class: "btn btn-large btn-dark-blue" %>
      </div>
    <% end %>
  </div>
</div>