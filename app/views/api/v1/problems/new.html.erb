<%= content_for(:head) do %>
  <%= javascript_include_tag "chosen.jquery.min", "charCount.js", "problems" %>
  <%= stylesheet_link_tag "chosen.css" %>
  <script type="text/javascript">
    $(function(){
      $('.navbar-brand').click(function(){
        window.open('http://oursolution.is/signup', 'oursolution.is', '');
        window.close();
        return false;
      });
    });
  </script>
<% end %>
<div class="row">
  <div class="col-md-7 offset2 center new-problem">
    <div id="form_header">
      <h3 class="old">Let <%= @politician.short_title %>. <%= @politician.last_name %> know what ails you</h3>
      <p id="disclaimer">* You must propose a solution.</p>
    </div>
    <div class="new-problem-container">
    <%= render :partial => 'api/v1/problems/form' %>
    </div>
  </div><!-- end content -->
</div><!-- end wrapper -->