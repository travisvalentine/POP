<div id="profile_problems">

  <% if current_user %>
    <h4>My solutions:</h4>
  <% else %>
    <h4>Things <%= @profile.first_name %> cares about:</h4>
  <% end %>

  <% @profile.solutions.each do |solution| %>
    <div class="profile-solution">
      <p><%= link_to solution.body, solution %></p>
    </div>
  <% end %>

</div>