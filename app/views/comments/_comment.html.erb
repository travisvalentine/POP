<div class="comment" data-comment-id="<%= comment.id %>">
  <%= comment.body %> - <%= link_to "#{comment.user.first_name}", profile_path(comment.user.profile) %>
  <% if current_user && current_user_comment?(comment) %>
    <%= link_to image_tag("delete_small.png", :class => "delete-icon"), comment_path(comment), :method => :delete, :confirm => "Are you sure you want to delete this comment?" %>
  <% end %>
</div>