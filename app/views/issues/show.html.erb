<div id="wrapper">
  <div id="content">
    <% if flash[:alert] || flash[:notice] %>
    <div class="alert">
      <% if flash[:alert] %>
        <p class="flash-error"><%= flash[:alert] %></p>
      <% end %>
      <% if flash[:notice] %>
        <p class="flash-notice"><%= flash[:notice] %></p>
      <% end %>
      <%= yield %>
    </div>
    <% end %>
    <div class="container-head">
      <h2 class="issue-name"><%= @issue.name %></h2>
    </div>
    <% @issue.problems.each do |issue_problem| %>
      <div class="issue-problem">
        <div class="vote">
          <%= link_to image_tag("up-large.png"), problem_upvotes_path(:id => issue_problem.id), :method => :post %>
          <h1><%= issue_problem.votes %></h1>
          <%= link_to image_tag("down-large.png"), problem_downvotes_path(:id => issue_problem.id), :method => :post %>
        </div>
        <div class="issue-problem-details">
          <p>
            <%= issue_problem.body %>
          </p>
        </div>
      </div>
        <% issue_problem.solutions.each do |solution| %>
        <div class="issue-problem-solution">
          <div class="vote-small">
            <%= link_to image_tag("up-small.png"), solution_upvotes_path(:id => solution.id), :method => :post %>
            <h4><%= solution.votes %></h4>
            <%= link_to image_tag("down-small.png"), solution_downvotes_path(:id => solution.id), :method => :post %>
          </div>
          <div class="issue-problem-solution-details">
            <p>
              <%= solution.body %>
            </p>
            <p>
              <%= link_to issue_problem.user.name, user_path(issue_problem.user) %>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>