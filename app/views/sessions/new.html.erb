<div id="wrapper">
  <div id="content">
    <% if flash[:alert] || flash[:notice] %>
    <div class="alert">
      <% if flash[:alert] %>
        <p class="flash-error"><%= flash[:alert] %></p>
      <% end %>
      <% if flash[:notice] %>
        <p class="flash-notice"><%= flash[:notice] %></p>
      <% end %>
      <%= yield %>
    </div>
    <% end %>
    <div id="loginContainer">
    <%= form_tag session_path, :class => "clearfix" do %>
    <% if !alert.nil? %>
      <div id="error_messages">
        <p id="error"><%= flash.now[:alert] %></p>
      </div>
    <% end %>
      <div id="login_header">
        <h3>Welcome Back</h3>
      </div>
      <div class="login-section">
        <p class="label"><label for="email">Email:</label></p>
        <p><%= text_field_tag :email, nil, :autofocus => true, :autocomplete => 'off' %></p>
      </div>
      <div class="login-section">
        <p class="label"><label for="password">Password:</label></p>
        <p><%= password_field_tag :password, nil, :autocomplete => 'off' %></p>
      </div>
      <div id="loginButton"><%= submit_tag 'Log In', :class => 'btn-med-blue btn-large' %></div>
      <div id="forget"><p><%= link_to "Forgot your password?", new_password_reset_path %></p></div>
    <% end %>
    </div><!-- end loginContainer -->
  </div><!-- end login -->
</div><!-- end wrapper -->