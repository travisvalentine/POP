<div class="row">
  <div class="span5 offset3">
    <% if flash[:alert] || flash[:notice] %>
    <div class="alert">
      <% if flash[:alert] %>
        <p class="flash-error"><%= flash[:alert] %></p>
      <% end %>
      <% if flash[:notice] %>
        <p class="flash-notice"><%= flash[:notice] %></p>
      <% end %>
      <%= yield %>
    </div>
    <% end %>
    <div id="login">
    <%= form_tag session_path, :class => "clearfix" do %>
    <% if !alert.nil? %>
      <div id="error_messages">
        <p id="error"><%= flash.now[:alert] %></p>
      </div>
    <% end %>
      <div id="form_header">
        <h1>Welcome Back</h1>
        <p><%= link_to image_tag("sign-in-with-twitter-d.png") %></p>
      </div>
      <div class="input-container">
        <p class="label"><label for="email">Email:</label></p>
        <p><%= text_field_tag :email, nil, :autofocus => true, :autocomplete => 'off' %></p>
      </div>
      <div class="input-container">
        <p class="label"><label for="password">Password:</label></p>
        <p><%= password_field_tag :password, nil, :autocomplete => 'off' %></p>
      </div>
      <div id="submit_button"><%= submit_tag 'Log In', :class => 'btn-med-blue btn-large' %></div>
      <div id="password_reset"><p><%= link_to "Forgot your password?", new_password_reset_path %></p></div>
    <% end %>
    </div>
  </div>
</div>
