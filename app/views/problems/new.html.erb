<%= content_for(:head) do %>
	<%= javascript_include_tag "chosen.jquery.min" %>
	<%= stylesheet_link_tag "chosen.css" %>
	<script type="text/javascript">
		$(function(){
    	$(".chzn-select").chosen({ disable_search_threshold : 25 });
    });
  </script>
<% end %>
<div id="wrapper">
  <div id="content">
    <div id="welcomeHead">
      <h1 class="old">What ails you, <%= current_user.profile.first_name %>?</h1>
      <p class="italics">*Every problem must come with a solution.</p>
    </div>
    <div class="new-problem-container">
    <%= render :partial => 'problems/form' %>
    </div>
  </div><!-- end content -->
</div><!-- end wrapper -->