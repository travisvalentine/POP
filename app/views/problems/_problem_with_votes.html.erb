<div class="vote big">
  <%= upvote_problem(@problem, "up-large.png") %>
  <h1><%= @problem.votes %></h1>
  <%= downvote_problem(@problem, "down-large.png") %>
</div>

<div id="problem_details">
  <h3><%= @problem.body %></h3>
  <% if @problem.user %>
    <p id="byline">- by <%= link_to @problem.user.profile.name, @problem.user.profile %>
      <% if @problem.user.profile.bio? %>
       , <%= @problem.user.profile.bio %>
      <% end %>
    </p>
  <% end %>

  <p id="admin_links">
    <%= link_to "#{@problem.issue.name} ", issue_path(@problem.issue) if @problem.issue.present? %>

  <span>
    <% if current_user && current_user_problem?(@problem) %>
      <%= link_to "edit", edit_problem_path(@problem) %>
      <%= link_to "delete", problem_path(@problem), :method => :delete, :confirm => "Are you sure you want to delete your problem and its solutions?" %>
    <% end %>
  </span>
  </p>
</div>