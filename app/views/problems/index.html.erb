<div id="wrapper">
  <div id="content">
    <div class="container-head">
      <h1>What people are thinking</h1>
      <%= link_to "Add a New Problem, #{current_user.profile.first_name}", new_problem_path, :id => "index_new_problem" %>
    </div>
    <% unless @problems.empty? %>
    <div id="others_problems">
      <h1>Others' Problems</h1>
      <%= render :partial => "other_problem", :collection => current_user.excluded_problems %>
    </div>
    <% end %>
  </div>
</div>